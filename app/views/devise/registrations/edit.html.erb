<div class="m-auto max-w-sm w-full flex flex-col">
  <h2 class="text-3xl font-bold">Settings</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, data: { turbo: false } }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input-primary dark:input-dark' %>
    </div>

    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username, autofocus: true, class: 'input-primary dark:input-dark' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'input-primary dark:input-dark' %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input-primary dark:input-dark' %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'input-primary dark:input-dark' %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: 'bg-emerald-600 hover:bg-emerald-500 text-white px-3 py-2 rounded-md duration-500 hover:cursor-pointer my-3' %>
    </div>
  <% end %>

  <h3 class="text-3xl font-bold">Cancel my account</h3>

  <%= button_to "Cancel my account", registration_path(resource_name), class: 'bg-red-600 hover:bg-red-500 text-white px-3 py-2 rounded-md duration-500 hover:cursor-pointer my-3', data: { confirm: "Are you sure?" }, method: :delete %>
</div>
