<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <div class="flex justify-center gap-3">
    <div class="btn-primary flex items-center justify-center bg-sky-600 hover:bg-sky-500 gap-x-2 py-2">
      <ion-icon class="text-2xl" name="logo-facebook"></ion-icon>
      <%= button_to "Facebook", user_facebook_omniauth_authorize_path, :data => {turbo: "false"} %><br/>
    </div>

    <div class="btn-primary flex items-center justify-center bg-gray-700 hover:bg-gray-600 gap-x-2 py-2">
      <ion-icon class="text-2xl" name="logo-github"></ion-icon>
      <%= button_to "GitHub", user_github_omniauth_authorize_path, :data => {turbo: "false"} %><br/>
    </div>
  </div>
<% end %>
