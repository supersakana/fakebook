<%= form_with(model: current_user.reactions.build) do |f| %>
  <%= f.hidden_field :reactable_id, :value => @reactable.id %>
  <%= f.hidden_field :reactable_type, :value => @reactable.class.name %>
  <%= button_tag(type: "submit", class: 'like text-2xl') do %>
      <ion-icon name="heart-outline"></ion-icon>
  <% end %> 
<% end %>