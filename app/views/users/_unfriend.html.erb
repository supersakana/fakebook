<div class="<%= unfriend_class(current_user, user) %>" >
  <% if current_user.recived_request?(user)%>
    <%= form_with(model: user.friendships.find_by(friend: current_user),
                html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :page, "#{controller_name}##{action_name}" %>
    <%= f.submit unfriend_btn(current_user, user), class: 'hover:cursor-pointer' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.friendships.find_by(friend: user),
                html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :page, "#{controller_name}##{action_name}" %>
    <%= f.submit unfriend_btn(current_user, user), class: 'hover:cursor-pointer' %>
    <% end %>
  <% end %>
</div>