<% unless current_user == @user %>
  <div class ='flex gap-x-2' id=<%= "friend_form#{@user.id}" %> >
  <% if current_user.recived_request?(@user) %>
    <%= render 'add_friend', :user => @user %>
    <%= render 'unfriend', :user => @user %>
  <% elsif current_user.friends_with?(@user) || current_user.pending_friends.include?(@user) %>
    <%= render 'unfriend', :user => @user %>
  <% else %>
     <%= render 'add_friend', :user => @user %>
  <% end %>
  </div>
<% end %>