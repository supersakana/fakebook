<% if current_user %>
    <nav class="py-3 md:flex md:items-center md:justify-between">
        <div class="flex justify-between items-center ">
        <span class="cursor-pointer text-4xl font-bold hover:text-emerald-400 duration-500">
            <%= link_to 'Gemz', root_path %>
        </span>
        <span class="text-3xl cursor-pointer mx-2 md:hidden block">
            <ion-icon id="burger" name="menu"></ion-icon>
        </span>
        </div>
         <ul id="list" class="md:flex md:items-center z-[1] md:z-auto md:static absolute w-full left-0 md:w-auto md:py-0 py-4 md:pl-0 pl-0 md:opacity-100 top-[-400px] z-10 bg-lm-1 dark:bg-dm-1">
            <li class="mx-4 my-6 md:my-0">
                <%= link_to current_user.username, current_user, class:'text-xl hover:text-emerald-400 duration-500' %>
            </li>
            <li class="mx-4 my-6 md:my-0">
                <%= link_to "#{pluralize(current_user.new_notifications.count, 'Notification')}",
                    notifications_user_path(current_user), class:'text-xl hover:text-emerald-400 duration-500' %>
            </li>
            <li class="mx-4 my-6 md:my-0">
                <%= link_to "Find friends", users_path, class:'text-xl hover:text-emerald-400 duration-500' %>
            </li>
            <li class="mx-4 my-6 md:my-0">
                <%= link_to "Settings", edit_user_registration_path, class:'text-xl hover:text-emerald-400 duration-500' %>
            </li>
            <li class="mx-4 my-6 md:my-0">
                <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, 
                        class:'text-xl hover:text-emerald-400 duration-500' %>
            </li>
            <li class="mx-4 my-6 md:my-0">
              <span class="text-3xl cursor-pointer mx-2">
                <ion-icon id="dark-mode" name="sunny-outline"></ion-icon>
              </span>
            </li>
        </ul>
    </nav>
<% else %>
<nav class="py-3 md:flex md:items-center md:justify-end">
  <span class="text-3xl cursor-pointer mx-2">
    <ion-icon id="dark-mode" name="sunny-outline"></ion-icon>
  </span>
</nav>
<% end %>