<div>
  <h1 class="text-3xl underline hover:text-rose-500 duration-500">Welcome <%= current_user.username %></h1>
    
  <%= render 'posts/post_form' %>

  <% unless @feed.empty? %>
  <div id=<%= "feed#{current_user.id}"%> >
    <% @feed.each do |post| %>
      <%= render post %>
      <%= link_to "#{pluralize(post.comments.count, 'Comment')}", post_path(post) %>
    <% end %>
    <%= paginate @feed %>
  </div>
  <% end %>
</div>