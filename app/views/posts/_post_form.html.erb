<%= render 'layouts/error_messages', object: @post %>

<div class="bg-white shadow-md dark:bg-dm-2 dark:shadow-none rounded-[6px] duration-500 mt-2 mb-8 py-3 px-4 border border-gray-100 dark:border-gray-700">
  <%= form_with(model: @post) do |f| %>
    <%= f.text_area :content, placeholder: "Write your new post here...", :class => 'input-primary dark:input-dark resize-none my-3 h-28 shadow-none outline-none p-0 my-0' %>
    <div class="flex justify-between items-center">
      <span class="image mt-4">
          <%= f.label :image do %>
            <ion-icon name="image-outline" class="z-[-1] text-3xl hover:cursor-pointer"></ion-icon>
          <% end %>
          <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png", :class => 'inputfile' %>
      </span>
      <%= f.submit "Post", :class => 'bg-emerald-500 hover:bg-emerald-400 dark:bg-emerald-600 dark:hover:bg-emerald-500 text-white px-3 py-2 rounded-md duration-500 hover:cursor-pointer'%>
    </div>
  <% end %>
</div>